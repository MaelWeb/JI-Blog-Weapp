<!-- pages/article/article.wxml -->
<import src="./templates/renderTemplate.wxml" />
<c-page title-config="{{titleConfig}}" show-loading="{{showLoading}}">
    <c-image class="article-layout-banner" mode="aspectFill" src="{{banner ? 'https:' + banner : 'https://cdn.liayal.com/article/article_default_banner.jpg' }}" />
    <view class="article-layout">
        <view class="tags" wx:if="{{ tags.length }}">
            <text class="tag" wx:for="{{tags}}" wx:key="{{item.id}}">{{item.name}}</text>
        </view>
        <view class="article-title">{{title}}</view>
        <view class="article-desc">
            <view class="item">
                <text class="iconfont icon-date" />
                <text class="txt">{{article.date}}</text>
            </view>
            <view class="item">
                <text class="iconfont icon-visit" />
                <text class="txt">{{article.visited}}</text>
            </view>
        </view>
        <view class="wxParse">
            <include src="./comi/comi.wxml" />
        </view>
