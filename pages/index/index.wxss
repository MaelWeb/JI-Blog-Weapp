.index-layout {}

.index-swiper {
    height: 200px;
    background-color: #ccc;
}

.swiper-item {
    position: relative;
}

.index-swiper image {
    width: 100%;
    height: 100%;
}

.index-swiper text {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 10rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: rgba(0, 0, 0, .6);
    color: #fff;
    font-size: 24rpx;
}

.tags-scroll {
    margin-top: 15rpx;
    height: 52rpx;
    border-bottom: 1rpx solid rgba(19,22,27,.5);
    font-size: 28rpx;
    color: #555;
    line-height: 1;
}

.tags-fixed {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    margin-top: 0;
    padding-top: 15rpx;
    background-color: #fff;
    z-index: 2;
}

.tags-item {
    padding: 10rpx 15rpx;
    display: inline-block;
}

.tag-active {
    color: #d1a47d;
    font-weight: 700;
}

.article-item {
    padding: 10rpx;
    display: flex;
    border-bottom: 1rpx solid #ddd;
    color: #333;
}

.article-banner {
    width: 240rpx;
    height: 140rpx;
}

.article-body {
    padding: 10rpx 10rpx 0 20rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
}

.article-title {
    font-size: 30rpx;
    flex: 1;
}

.article-time {
    font-size: 24rpx;
    color: #ccc;
}