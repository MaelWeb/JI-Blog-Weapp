.index-layout {}

.index-swiper {
    height: 400rpx;
}

.swiper-item {
    position: relative;
}

.index-swiper image {
    width: 100%;
    height: 100%;
}

.index-swiper text {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 10rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: rgba(0, 0, 0, .6);
    color: #fff;
    font-size: 24rpx;
}

.tags-scroll {
    margin-top: 15rpx;
    height: 52rpx;
    border-bottom: 1rpx solid rgba(19,22,27,.5);
    font-size: 28rpx;
    color: #555;
    line-height: 1;
}

.tags-item {
    padding: 10rpx 15rpx;
    display: inline-block;
}

.tag-active {
    color: #d1a47d;
    font-weight: 700;
}