/* pages/photo/photo.wxss */

.photo-header {
    position: relative;
    background-color: #ccc;
}

.photo-header:after {
    position: absolute;
    left: 50%;
    bottom: -15rpx;
    padding: 6rpx 12rpx;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    font-family: iconfont!important;
    font-size: 40rpx;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    content: "\E600";
    background-color: #fff;
    border-radius: 80rpx 80rpx 0 0;
    line-height: 1;
}

.photo-header image {
    width: 100%;
    height: 400rpx;
    display: block;
}

.photo-layout .aticle-info {
    position: absolute;
    left: 0;
    bottom: 0;
    padding: 10rpx 20rpx;
    color: #fff;
    font-size: 28rpx;
    width: 100%;
    box-sizing: border-box;
}

.photo-layout .small {
    margin-bottom: 10rpx;
}

.photo-layout .small text {
    padding-bottom: 8rpx;
    border-bottom: 4rpx solid #fff;
    display: inline-block;
}

.photo-layout .aticle-info-h2 {
    margin-bottom: 10rpx;
    font-size: 28rpx;
    font-weight: 500;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.photo-layout .sub-title {
    font-size: 24rpx;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.photo-list {
	margin: 0 15rpx;
    column-count: 2;
    column-gap: 15rpx;
}

.photo-item {
    width: 100%;
    margin-bottom: 15rpx;
    background: #fefefe;
    transition: opacity .4s ease-in-out;
    display: inline-block;
}

.photo-item image {
	width: 100%;
	height: auto;
	display: block;
}
.photo-item text {
	padding: 0 10rpx;
	background-color: #212121;
	color: #fff;
	display: block;
}