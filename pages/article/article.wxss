/* pages/article/article.wxss */

@import "../../utils/towxml/style/main.wxss";
@import "../../utils/towxml/style/theme/light.wxss";

.article-layout {
    padding-bottom: 20rpx;
}

.article-title {
    padding: 20rpx 20rpx 10rpx;
    color: #212121;
    font-size: 40rpx;
    text-align: center;
    border: none;
    word-break: break-all;
    font-weight: 500;
}

.article-layout-loading {
    width: 100%;
    min-height: 100%;
}
.article-titlep {
    margin-bottom: 0;
    display: inline-block;
    text-align: center;
}

.article-titleem {
    position: relative;
    font-style: normal;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.article-desc {
    padding: 0 20rpx;
    color: #999;
    line-height: 1;
    font-size: 24rpx;
}

.article-desc .item {
    margin-right: 20rpx;
    display: inline-block;
    vertical-align: middle;
}

.article-desc .txt {
    margin-left: 10rpx;
}

.article-loading-block {
    display: inline-block;
    margin: 5px 2% 0 0;
    height: 40rpx;
    border-radius: 2px;
    background: linear-gradient(90deg, rgba(207, 216, 220, 0.2), rgba(207, 216, 220, 0.4), rgba(207, 216, 220, 0.2));
    background-size: 600% 600%;
    vertical-align: middle;
}