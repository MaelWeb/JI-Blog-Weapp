.page-base {
  min-height: 100vh;
  box-sizing: border-box;
  overflow-x: hidden;
  padding-bottom: 60rpx;
}
.page-base .titleBar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: block;
  z-index: 999;
}
.page-base .menu {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  align-items: center;
  font-weight: 500;
  color: #3a3c42;
}
.page-base .menu .close {
  position: absolute;
  left: 30rpx;
  padding: 20rpx;
}
.page-base .menu .ji-blog {
  margin: 20rpx 0 60rpx 0;
  font-size: 44rpx;
}
.page-base .menu .slogan {
  position: relative;
  padding: 40rpx 0 30rpx 0;
  font-size: 24rpx;
}
.page-base .menu .slogan::after {
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 60rpx;
  height: 4rpx;
  margin-left: -30rpx;
  background-color: #3a3c42;
  border-radius: 2rpx;
  content: '';
}
.page-base .menu-item {
  margin-bottom: 60rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 100%;
  text-align: center;
  line-height: 300rpx;
  background-color: #333;
  color: #fff;
}
.page-base .menu-item.camera {
  background-color: #baf1fc;
}
.page-base .menu-item.book {
  background-color: #262e5b;
}
.page-base .menu-item.pen {
  background-color: #4c80f8;
}
