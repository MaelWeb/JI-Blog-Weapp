.ji-popup {
  position: relative;
}
.ji-popup .ji-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.75);
}
.ji-popup .ji-popup-body-wrap {
  position: fixed;
  box-sizing: border-box;
  background-color: inherit;
}
.ji-popup-body,
.ji-popup-body-iphonex {
  width: inherit;
  height: inherit;
  box-sizing: border-box;
}
.ji-popup-center .ji-popup-body-wrap {
  width: auto;
  height: auto;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.ji-popup-bottom .ji-popup-body-wrap,
.ji-popup-top .ji-popup-body-wrap {
  left: 0;
  width: 100%;
  height: auto;
}
.ji-popup-bottom .ji-popup-body-wrap {
  bottom: 0;
}
.ji-popup-bottom .ji-popup-body-iphonex {
  padding-bottom: 40rpx;
}
.ji-popup-top .ji-popup-body-wrap {
  top: 0;
}
.ji-popup-left .ji-popup-body-wrap,
.ji-popup-right .ji-popup-body-wrap {
  top: 0;
  width: auto;
  height: 100vh !important;
}
.ji-popup-left .ji-popup-body-iphonex,
.ji-popup-right .ji-popup-body-iphonex {
  padding: 0 40rpx;
}
.ji-popup-right .ji-popup-body-wrap {
  right: 0;
}
.ji-popup-left .ji-popup-body-wrap {
  left: 0;
}
