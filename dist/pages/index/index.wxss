.index-layout {
  position: relative;
}
.index-layout .index-swiper {
  padding: 60rpx 0 30rpx;
  height: 600rpx;
}
.index-layout .swiper-item {
  position: relative;
}
.index-layout .swiper-item .swiper-item-box {
  position: relative;
  margin: 0 20rpx;
  height: 100%;
  border-radius: 40rpx;
  overflow: hidden;
}
.index-layout-header {
  margin-left: 40rpx;
  line-height: 1.5;
}
.index-layout-date {
  font-weight: 500;
  color: #fe7549;
  font-size: 12px;
}
.index-layout-title {
  font-size: 22px;
  font-weight: 600;
}
.index-layout-menu {
  margin: 8rpx 0 0 -6rpx;
  display: inline-block;
  vertical-align: top;
}
.index-layout .index-swiper c-image {
  width: 100%;
  height: 100%;
  display: block;
}
.index-layout .index-swiper text {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 40rpx 60rpx 40rpx 40rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 1.5;
}
.index-layout .tags-scroll {
  width: 100%;
  height: 132rpx;
  font-size: 32rpx;
  line-height: 1;
  font-weight: 500;
}
.index-layout .tags-scroll .scroll-view {
  width: 100%;
  padding: 40rpx 40rpx 40rpx 25rpx;
  white-space: nowrap;
  box-sizing: border-box;
  background-color: #fff;
}
.index-layout .tags-scroll .fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}
.index-layout .tags-item {
  padding: 10rpx 15rpx;
  display: inline-block;
  vertical-align: middle;
}
.index-layout .tag-active {
  color: #d1a47d;
  font-weight: 700;
}
.index-layout .article-list {
  padding: 0 40rpx;
}
.index-layout .article-item {
  margin-bottom: 40rpx;
  display: flex;
  color: #181e1e;
}
.index-layout .article-banner {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.index-layout .article-body {
  padding: 10rpx 10rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}
.index-layout .article-title {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  flex: 1;
  font-weight: 500;
}
.index-layout .article-time {
  font-size: 24rpx;
  color: #96a0a2;
}
.index-layout .icon {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10rpx;
}
